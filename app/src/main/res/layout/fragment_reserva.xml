<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.views.fragment.ReservaFragment">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESERVA"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:translationY="45sp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="Servicio de Masajes:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationY="80sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationY="90sp">

        <RadioGroup
            android:id="@+id/rdgServMsj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdbMsjPareja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="200sp"
                android:text="Relajante"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdbMsjTerapeutico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="200sp"
                android:text="Terapeutico"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdbMsjDescon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="200sp"
                android:text="Desconstracturante"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdbMsjRelajante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="200sp"
                android:text="Relajante"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/EDTFECHAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="290sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:translationY="125sp" />

    <EditText
        android:id="@+id/EDTHORAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="300sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:translationY="135sp" />

    <Button
        android:id="@+id/BTNHORAR"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145sp"
        android:layout_marginRight="160sp"
        android:backgroundTint="#000000"
        android:text="Hora"
        android:textColor="#FFFFFF"
        android:translationX="-2sp"
        android:translationY="90sp" />

    <Button
        android:id="@+id/BTNCONFIRMAR"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135sp"
        android:layout_marginRight="150sp"
        android:backgroundTint="#020202"
        android:onClick="BotonConfirmar"
        android:text="CONFIRMAR"
        android:textColor="#FFFFFF"
        android:translationY="130sp" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135sp"
        android:layout_marginRight="150sp"
        android:backgroundTint="#000000"
        android:onClick="BotonRegresar"
        android:rotationX="10"
        android:text="REGRESAR"
        android:textColor="#FFFFFF"
        android:translationY="145sp" />

</LinearLayout>