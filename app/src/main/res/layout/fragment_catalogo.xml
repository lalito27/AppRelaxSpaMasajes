<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.views.fragment.CatalogoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="252dp"
            android:layout_height="228dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/masajedepareja" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="239dp"
            android:layout_height="210dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:translationY="2sp"
            app:srcCompat="@drawable/masajedescontracturante" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationY="10sp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masaje de pareja"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masaje Descontracturante"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationY="40sp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="282dp"
            android:layout_height="228dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/masajerelajante" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="267dp"
            android:layout_height="228dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/masajeterapeutico" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationY="50sp">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masaje Relajante"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masaje Terapeutico"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/BotonAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130sp"
        android:layout_marginRight="130sp"
        android:backgroundTint="#434B4D"
        android:onClick="BotonAtras"
        android:text="ATRÃS"
        android:textColor="#FFDF00"
        android:translationY="80sp" />
</LinearLayout>