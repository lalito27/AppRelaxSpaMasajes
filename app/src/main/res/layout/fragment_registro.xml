<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/registroFragment"
    android:orientation="vertical"
    tools:context="com.example.relaxspa.ui.views.fragment.RegistroFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRATE"
        android:textAlignment="center"
        android:textColor="#E2943A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationY="40sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:translationY="50sp"
        app:srcCompat="@drawable/logomasaje" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"
        android:translationY="70sp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombres:"
            android:textColor="#E2943A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationX="10sp" />

        <EditText
            android:id="@+id/EDTNOMBRES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ingrese sus nombres..."
            android:inputType="textPersonName"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"
        android:translationY="75sp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apellidos:"
            android:textColor="#E2943A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationX="10sp" />

        <EditText
            android:id="@+id/EDTAPELLIDOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ingrese sus apellidos..."
            android:inputType="textPersonName"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"
        android:translationY="80sp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DNI:"
            android:textColor="#E2943A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationX="10sp" />

        <EditText
            android:id="@+id/EDTDNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ingrese su DNI..."
            android:inputType="number"
            android:maxLength="8"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"
        android:translationY="85sp">

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Password:"
            android:textColor="#E2943A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationX="10sp" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ingrese su password..."
            android:inputType="textPassword"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"
        android:translationY="85sp">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dirección:"
            android:textColor="#E2943A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationX="10sp" />

        <EditText
            android:id="@+id/EDTDIRECPRI"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ingrese su dirección..."
            android:inputType="textPersonName"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        android:textColor="#E2943A"
        android:textSize="15sp"
        android:textStyle="bold"
        android:translationX="10sp"
        android:translationY="92sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationY="96sp">

        <RadioGroup
            android:id="@+id/RDBSEXO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RDBM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Masculino"
                android:textColor="#E2943A"
                android:translationX="10sp" />

            <RadioButton
                android:id="@+id/RDBF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Femenino"
                android:textColor="#E2943A" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal"
        android:translationY="101sp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Celular:"
            android:textColor="#E2943A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationX="10sp" />

        <EditText
            android:id="@+id/EDTCELULAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ingrese su número de celular..."
            android:inputType="phone"
            android:maxLength="9"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingLeft="60dp"
        android:translationY="110sp">

        <Button
            android:id="@+id/BTNREGISTRAR"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="#474A51"
            android:onClick="BotonRegistrarR"
            android:rotationX="12"
            android:text="REGISTRAR"
            android:textColor="#FFDF00" />

        <Button
            android:id="@+id/BTNCANCELAR"
            android:layout_width="113dp"
            android:layout_height="38dp"
            android:backgroundTint="#474A51"
            android:onClick="BotonSalir"
            android:rotationX="12"
            android:text="SALIR"
            android:textColor="#FFDF00" />
    </LinearLayout>

</LinearLayout>